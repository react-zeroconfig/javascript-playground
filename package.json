{
  "private": true,
  "scripts": {
    "start": "start-storybook",
    "test": "jest --colors",
    "lint": "eslint \"src/**/*.{js,jsx,mjs}\""
  },
  "jest": {
    "preset": "react-zeroconfig"
  },
  "husky": {
    "hooks": {
      "pre-commit": "markdown-source-import \"{,!(node_modules)/**/}*.md\" --git-add && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,mjs}": [
      "eslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "eslintIgnore": [
    "src/**/public/*",
    "src/**/*.d.ts"
  ],
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@storybook/addon-storysource": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "eslint": "^6.2.2",
    "eslint-config-react-app": "^5.0.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.3",
    "markdown-source-import": "^1.2.0",
    "react-zeroconfig": "^3.15.0"
  }
}
